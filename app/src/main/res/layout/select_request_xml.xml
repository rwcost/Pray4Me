<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectRequestJava">

  <Button
      android:id="@+id/button5"
      android:layout_width="315dp"
      android:layout_height="34dp"
      android:layout_marginTop="16dp"
      android:text="Select a request to pray for in my area"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/button4" />

  <TextView
      android:id="@+id/textView12"
      android:layout_width="338dp"
      android:layout_height="20dp"
      android:layout_marginTop="16dp"
      android:text="Please Select a option bellow"
      android:textAlignment="center"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <Button
      android:id="@+id/button3"
      android:layout_width="188dp"
      android:layout_height="37dp"
      android:layout_marginTop="16dp"
      android:text="Pray for all requests"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView12" />

  <Button
      android:id="@+id/button4"
      android:layout_width="307dp"
      android:layout_height="34dp"
      android:layout_marginTop="16dp"
      android:text="Select a random request to pray for"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/button3" />

  <TextView
      android:id="@+id/txt1"
      android:layout_width="337dp"
      android:layout_height="475dp"
      android:layout_marginTop="16dp"
      android:text="TextView"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.513"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/button5"
      app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>