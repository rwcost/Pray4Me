<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="409dp"
    android:layout_height="600dp"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp"
    android:fillViewport="true"
    android:layout_gravity="center_horizontal"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".SelectionsJava">

        <TextView
            android:id="@+id/husband"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/husbandtext"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="@+id/wife"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/wife"
            app:layout_constraintTop_toBottomOf="@+id/wife" />

        <TextView
            android:id="@+id/mother"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="8dp"
            android:text="@string/momtext"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toTopOf="@+id/btnSelectToPray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/chilld"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/PrayRequestPageTitle"
            android:textAlignment="center"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="24sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            app:layout_constraintEnd_toEndOf="@+id/textView8"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="@+id/textView8"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <Button
            android:id="@+id/btnAddRequest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="32dp"
            android:text="@string/btnAdd"
            app:layout_constraintBottom_toTopOf="@+id/btnSelectToPray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/request"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/trouble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="I'm in trouble, please pray for me."
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="@+id/btnSelectToPray"
            app:layout_constraintStart_toStartOf="@+id/btnSelectToPray"
            app:layout_constraintTop_toBottomOf="@+id/btnSelectToPray" />

        <TextView
            android:id="@+id/addiction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/addiction"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="@+id/trouble"
            app:layout_constraintStart_toStartOf="@+id/trouble"
            app:layout_constraintTop_toBottomOf="@+id/trouble" />

        <TextView
            android:id="@+id/cancer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="I have cancer, please pray for me."
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="@+id/addiction"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="@+id/addiction"
            app:layout_constraintTop_toBottomOf="@+id/addiction" />

        <TextView
            android:id="@+id/job"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/job"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="@+id/cancer"
            app:layout_constraintStart_toStartOf="@+id/cancer"
            app:layout_constraintTop_toBottomOf="@+id/cancer" />

        <TextView
            android:id="@+id/depressed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/depressed"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="@+id/job"
            app:layout_constraintHorizontal_bias="0.53"
            app:layout_constraintStart_toStartOf="@+id/job"
            app:layout_constraintTop_toBottomOf="@+id/job" />

        <TextView
            android:id="@+id/wife"
            android:layout_width="225dp"
            android:layout_height="34dp"
            android:layout_marginTop="30dp"
            android:text="@string/wifetext"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="@+id/depressed"
            app:layout_constraintHorizontal_bias="0.466"
            app:layout_constraintStart_toStartOf="@+id/depressed"
            app:layout_constraintTop_toBottomOf="@+id/depressed" />

        <TextView
            android:id="@+id/lonely"
            android:layout_width="353dp"
            android:layout_height="59dp"
            android:layout_marginTop="72dp"
            android:text="@string/lonely"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="@+id/husband"
            app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintStart_toStartOf="@+id/husband"
            app:layout_constraintTop_toBottomOf="@+id/husband" />

        <TextView
            android:id="@+id/chilld"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/child"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="@+id/lonely"
            app:layout_constraintHorizontal_bias="0.485"
            app:layout_constraintStart_toStartOf="@+id/lonely"
            app:layout_constraintTop_toBottomOf="@+id/lonely" />

        <TextView
            android:id="@+id/dad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/dadtext"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/chilld"
            app:layout_constraintStart_toStartOf="@+id/chilld"
            app:layout_constraintTop_toBottomOf="@+id/chilld" />

        <TextView
            android:id="@+id/dad1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/dadtext"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/dad"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/dad"
            app:layout_constraintTop_toBottomOf="@+id/dad" />

        <Button
            android:id="@+id/btnclear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="36dp"
            android:text="Clear"
            app:layout_constraintBottom_toTopOf="@+id/btnSelectToPray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/request"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/donebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:text="@string/Donetext"
            app:layout_constraintEnd_toStartOf="@+id/btnclear"
            app:layout_constraintHorizontal_bias="0.743"
            app:layout_constraintStart_toEndOf="@+id/btnAddRequest"
            app:layout_constraintTop_toBottomOf="@+id/request" />

        <Button
            android:id="@+id/btnSelectToPray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:text="@string/btnPrayFor"
            app:layout_constraintEnd_toEndOf="@+id/btnclear"
            app:layout_constraintStart_toStartOf="@+id/btnAddRequest"
            app:layout_constraintTop_toBottomOf="@+id/donebutton" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>